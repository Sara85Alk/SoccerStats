<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FFC107</item>
        <!-- Primary dark color -->
        <item name="colorPrimaryDark">#FFA000</item>
        <!-- Primary text color -->
        <item name="android:textColorPrimary">#FFECB3</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#4CAF50</item>
        <!-- Text color of buttons in the app -->
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>